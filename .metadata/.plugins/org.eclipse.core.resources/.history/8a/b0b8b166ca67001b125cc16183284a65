      <h:form>
         <h1>#{message.enterPayment}</h1>
         <h:panelGrid columns="3">
            #{message.amount}
            <h:inputText id="amount" label="#{msgs.amount}"
                         value="#{payment.amount}" required="true">
               <f:convertNumber minFractionDigits="2"/>
               <f:validateDoubleRange minimum="10" maximum="10000"/>
            </h:inputText>
            <h:message for="amount" styleClass="errorMessage"/>

            #{message.creditCard}
            <h:inputText id="card" label="#{message.creditCard}"
                         value="#{payment.card}" required="true"
                         requiredMessage="#{message.cardRequired}">
               <f:validateLength minimum="13"/>
            </h:inputText>
            <h:message for="card" styleClass="errorMessage"/>

            #{message.expirationDate}
            <h:inputText id="date" label="#{message.expirationDate}"
                         value="#{payment.date}" required="true">
               <f:convertDateTime pattern="MM/yyyy"/>
            </h:inputText>
            <h:message for="date" styleClass="errorMessage"/>
         </h:panelGrid>
         <h:commandButton value="#{message.process}" action="result"/>
         <h:commandButton value="#{message.cancel}" action="canceled" 
